\def\@makechapterhead#1{             % Heading for \chapter command
  \vspace*{25pt}                     % Space at top of text page.
  { \parindent 0pt \leftskip=0pt plus 1filll \rightskip=\leftskip
    \bf \Large \@chapapp{} \thechapter      % 'Chapter' and number.

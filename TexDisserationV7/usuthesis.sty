    \Large #1\par
    \nobreak                         % TeX penalty to prevent page break.
  %  \vskip 3pt plus 0pt minus 0pt   % Space between title and text.
  \vskip 0.54\baselineskip         % Space between title and text.
       % Rama made 0.67 to 0.1
  } }

\def\@makeschapterhead#1{               % Heading for \chapter* command
  \vspace*{10pt}                        % Space at top of page.
  { \parindent 0pt \leftskip=0pt plus 1filll \rightskip=\leftskip
    \bf                                 % Title.
    #1\par
    \nobreak                         % TeX penalty to prevent page break.
    \vskip 0.1pt plus 0pt minus 0pt    % Space between title and text.
  } }
